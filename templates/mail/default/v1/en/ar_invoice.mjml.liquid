{% assign remarkOp = PredefinedTexts | where: "TextCode", "B1IO_RemarkOp_INV_E" | first %}
{% assign remarkCl = PredefinedTexts | where: "TextCode", "B1IO_RemarkCl_INV_E" | first %}
{% assign formattedDocNum = DocumentSeries.Prefix | append: Document.DocNum | append: DocumentSeries.Suffix %}

{% assign contactDocument = BusinessPartner.ContactEmployees | where: "InternalCode", Document.ContactPersonCode | first %}

<mjml>
    <mj-head>
        <mj-attributes>
            <mj-all font-family="Calibri, sans" />
        </mj-attributes>
        <mj-preview>
            Your {{ Company.CompanyName }} invoice {{ formattedDocNum }}
        </mj-preview>
        <mj-title> Your {{ Company.CompanyName }} invoice {{ formattedDocNum }}</mj-title>
    </mj-head>
    <mj-body>
        <mj-section padding-top="50px" padding-bottom="50px">
            <mj-column>
                <mj-image width="200px" src="{{ '/tenant/templates/mail/assets/logo.png' | cdn: './../assets/logo.png' }}"/>
            </mj-column>
        </mj-section>
        <mj-section background-color="#e7e6e6" padding-top="10px" padding-bottom="10px">
            <mj-column>
                <mj-text padding-bottom="0px" font-weight="400" font-size="20px" align="center">INVOICE</mj-text>
                <mj-text padding-top="0px" font-weight="400" font-size="20px" align="center">{{ formattedDocNum }}</mj-text>
                <mj-divider border-width="6px" border-style="solid" border-color="#a6a6a6" />
            </mj-column>
        </mj-section>
        <mj-section background-color="#e7e6e6" padding-top="10px" padding-bottom="10px">
            <mj-column>
                <mj-text>
                    {% if contactDocument.Name %}
                    Dear {{ contactDocument.Name }},
                    {% else %}
                    Dear Sir or Madam,
                    {% endif %}
                </mj-text>
                <mj-text line-height="1.7em">
                    {% if remarkOp %}
                    {{ remarkOp.Text | replace: "\r", "\n" | newline_to_br }}
                    {% else %}
                    attached to this e-mail you will find your electronic invoice.
                    {% endif %}
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section background-color="#cfcece" padding-top="10px" padding-bottom="10px" >
            <mj-group>
                <mj-column width="33.333333%">
                    <mj-text font-weight="600" font-size="14px" align="center">
                        Invoice number<br>
                        {{ formattedDocNum }}
                    </mj-text>
                </mj-column>
                <mj-column>
                    <mj-text font-weight="600" font-size="14px" align="center">
                        Amount<br>
                        {{ Document.DocTotal }} {{ Document.DocCurrency }}
                    </mj-text>
                </mj-column>
                <mj-column>
                    <mj-text font-weight="600" font-size="14px" align="center">
                        Reference<br>
                        {{ Document.NumAtCard | default: '-' }}
                    </mj-text>
                </mj-column>
            </mj-group>
        </mj-section>
        <mj-section background-color="#e7e6e6" padding-top="10px" padding-bottom="10px">
            <mj-column>
                <mj-text>
                    {%if remarkCl %}
                    {{ remarkCl.Text | replace: "\r", "\n" | newline_to_br }}
                    {%else%}
                    Please note, the attached PDF document is the original invoice.
                    {%endif%}
                </mj-text>  
                <mj-text padding-top="20px">
                    With kind regards<br>
                    Your {{ Company.CompanyName }} Team
                </mj-text>
                <mj-divider border-width="6px" border-style="solid" border-color="#a6a6a6" padding-top="30px"/>

                {% render "./partials/footer.mjml.liquid" %}

            </mj-column>
        </mj-section>
    </mj-body>
</mjml>
